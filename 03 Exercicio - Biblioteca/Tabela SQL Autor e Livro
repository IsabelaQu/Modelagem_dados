CREATE TABLE Livro (
  id_Livro INT AUTO_INCREMENT PRIMARY KEY,
  Titulo VARCHAR(30) NOT NULL,
  QuantidadePaginas INT NOT NULL,
  Acabamento VARCHAR(40) NOT NULL,
  Editora VARCHAR(100) NOT NULL
);

