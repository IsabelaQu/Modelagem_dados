CREATE TABLE Autor (
  id_Autor INT AUTO_INCREMENT PRIMARY KEY,
  Nome VARCHAR(150) NOT NULL,
  Email VARCHAR(250) NOT NULL,
  Nacionalidade VARCHAR(50) NOT NULL,
  DataNascimento DATE NOT NULL
);

